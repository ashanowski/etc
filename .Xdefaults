URxvt.scrollBar: false
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007
URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger: C-Up
URxvt.iso14755: false
URxvt.iso14755_52: false

! font
!URxvt*font: xft:Source\ Code\ Pro\ Medium:size=10:antialias=true:hinting=true
!,xft:Liberation Mono:antialias=true:hinting=true
URxvt.font: xft:Powerline:style=regular:size=10
!URxvt.font: xft:Source Code Pro Powerline:style=regular:size=10

! terminal padding
URxvt.internalBorder: 0

! uncomment for transparent terminal if you are ready to be made fun of in #rice
URxvt.transparent:  true
URxvt.shading:      30

! make otf / ttf fonts look pretty.  does not matter if you are using a bitmap font.
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 0
ft.antialias: 1
Xft.rgba: rgb

! clickable links, clipboard support, mouse wheel support, and on the fly font resizing
! you will need to install the relevent perl extensions for these to work
URxvt.perl-ext-common: default,matcher,clipboard,vtwheel
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg5


